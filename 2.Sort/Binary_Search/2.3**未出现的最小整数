[**非常经典**]无序数组，未出现的最小整数---- - 左程云P386
/*
if A[i]==i
     i++;
else if A[i]<0 || A[i]>N-1 || A[i]==A[A[i]]
     A[i]=A[--N];
else
     swap(A[i],A[A[i]]);

return N;
*/
// 0~N-1中第一个未出现的数
int Fun(int A[], int N){
	for (int i = 0; i < N;){
		if (A[i] == i)
			i++;
		else {
			if (A[i]<0 || A[i]>N - 1 || A[A[i]] == A[i]){ //越界 || 重复出现
				A[i] = A[N - 1]; N--;//删除A[i]
			} 
			else
				swap(A[i], A[A[i]]);
		}
	}
	return N;
}
int main(){
	int A[] = { 1, 2, 0, 4, 3, 3, 5, 6, 9, 8 };
	int N = sizeof(A) / sizeof(A[0]);
	int ret = Fun(A, N); //7
}
