void swap(int A[], int a, int b){
	if (a == b)  //非常重要
		return;
	A[a] ^= A[b]; A[b] ^= A[a]; A[a] ^= A[b];
}
void move(int A[], int N){
	int l = 0, r = N - 1;
	while (l < r){
		while (l < r && A[l] % 2 != 0) //奇数
			l++;
		while (l < r && A[r] % 2 == 0) //偶数
			r--;
		swap(A, l, r);
	}
}
int main(){
	int A[] = { 1,2,2,1,3,4,1,6,1,4 };
	int N = sizeof(A) / sizeof(A[0]);
	move(A, N);
}
